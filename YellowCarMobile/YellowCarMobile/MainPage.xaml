<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:YellowCarMobile"
             x:Class="YellowCarMobile.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.Column="0"
               x:Name="CapturedImage" 
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               Aspect="AspectFill" />
        <!--<Button x:Name="OutputLabel" 
               Grid.Row="0" Grid.Column="0"
               VerticalOptions="Center" HorizontalOptions="Center" 
               FontSize="Large" FontAttributes="Bold"
               TextColor="Black" BackgroundColor="Yellow"
                IsEnabled="False" />-->
        <Button Grid.Row="0" Grid.Column="0"
                VerticalOptions="End" HorizontalOptions="Fill" 
                TextColor="Black" BorderColor="Black" BackgroundColor="Yellow"
                x:Name="TakePictureButton" Text="Take Picture" Clicked="TakePictureButton_Clicked" />
    </Grid>


</ContentPage>